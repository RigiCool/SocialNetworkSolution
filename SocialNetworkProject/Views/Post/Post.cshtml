@model Post

<div class="modal-overlay">
    <div class="modal-body">
        @{
            var tempDataValue = TempData["Errors"] as string;
        }

        @if (!string.IsNullOrEmpty(tempDataValue))
        {
            <div id="error-block" class="row error-block">
                <div class="col-md-11 error-content">
                    <div class="error-body">
                        <p class="error-text">@tempDataValue</p>
                    </div>
                </div>
            </div>
        }
        <div class="modal-content">
            <h2>Create Post</h2>
            <!-- Form for creating a post -->
            <form asp-action="Post" method="post" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Title:</label>
                    <div>
                        <input asp-for="Title" class="form-control reglog_input">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Content:</label>
                    <div>
                        <textarea asp-for="Text" class="form-control reglog_input"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Image:</label>
                    <div>
                        <input asp-for="ImageData" type="file" class="form-control reglog_input" id="file-input" hidden />
                        <div class="file-block form-group d-flex align-items-center">
                            <label for="file-input" class="post-text" style="margin: 0;">Choose a photo...</label>
                            <span asp-validation-for="ImageData" class="text-danger"></span>
                            <lord-icon src="https://cdn.lordicon.com/vczwnict.json"
                                       trigger="hover"
                                       stroke="bold"
                                       style="width:50px;height:50px"
                                       colors="primary:#7166ee,secondary:#cb5eee"
                                       target=".file-block">
                            </lord-icon>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

