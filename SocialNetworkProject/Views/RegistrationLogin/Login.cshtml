@model User
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body style="margin: 0;">
    <div class="container-fluid d-flex align-items-center justify-content-center" style="background-image: url('/img/Login.jpg'); height: 100vh">
        <div class="text-center">
            <div class="row px-5" style="background-color: rgba(51, 51, 51, 0.5); box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); border: 5px solid transparent; border-image: linear-gradient(35deg, rgba(38, 41, 254, 0.8), rgba(211, 38, 254, 0.8)) 1; ">
                <h3 class="mt-3">Login</h3>
                <form asp-action="Login" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Nickname"></label>
                        <div>
                            <input asp-for="Nickname" class="form-control reglog_input" />
                            <span asp-validations-for="Nickname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div>
                            <input asp-for="Password" class="form-control reglog_input" />
                            <span asp-validations-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <input class="mb-5 btn btn-outline-light mt-5" type="submit" value="LOGIN" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>


