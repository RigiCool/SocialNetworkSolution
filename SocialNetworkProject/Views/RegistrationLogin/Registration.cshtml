@model UserRegistrationViewModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body style="margin: 0;">
    <div class="container-fluid d-flex align-items-center justify-content-center" style="background-image: url('/img/Registration.jpg'); height:100%;">
        <div class="text-center">
            <div class="row px-5 my-5" style="background-color: rgba(51, 51, 51, 0.5); box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); border: 5px solid transparent; border-image: linear-gradient(35deg, rgba(38, 41, 254, 0.8), rgba(211, 38, 254, 0.8)) 1; ">
                <h3 class="mt-2">Registration</h3>
                <form asp-action="Registration" method="post" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="User.Nickname"></label>
                        <div>
                            <input asp-for="User.Nickname" class="form-control reglog_input" />
                            <span asp-validation-for="User.Nickname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Password"></label>
                        <div>
                            <input asp-for="User.Password" class="form-control reglog_input" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Name"></label>
                        <div>
                            <input asp-for="User.Name" class="form-control reglog_input" />
                            <span asp-validation-for="User.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Surname"></label>
                        <div>
                            <input asp-for="User.Surname" class="form-control reglog_input" />
                            <span asp-validation-for="User.Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Age"></label>
                        <div>
                            <input asp-for="User.Age" class="form-control reglog_input" />
                            <span asp-validation-for="User.Age" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Phone"></label>
                        <div>
                            <input asp-for="User.Phone" class="form-control reglog_input" />
                            <span asp-validation-for="User.Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Email"></label>
                        <div>
                            <input asp-for="User.Email" class="form-control reglog_input" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.RoleId">Role</label>
                        <select asp-for="User.RoleId" class="form-select reglog_select" aria-label="Default select example">
                            <option selected disabled>Select Role</option>
                            @foreach (var role in Model.Roles)
                            {
                                if (role.Name != "Admin")
                                {
                                    <option class="reglog_option" value="@role.Id">@role.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="User.RoleId" class="text-danger"></span>
                    </div>
                    <input class="mb-3 btn btn-outline-light mt-5" type="submit" value="BECOME PART" />
                </form>
            </div>
            <div class="row p-5 my-5" style="background-color: rgba(51, 51, 51, 0.5); box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); border: 5px solid transparent; border-image: linear-gradient(35deg, rgba(38, 41, 254, 0.8), rgba(211, 38, 254, 0.8)) 1; ">
                <h3 class="mb-2">Already with us? Click to login.</h3>
                <a class="m-auto btn btn-outline-light reglog_btn" href="/RegistrationLogin/Login">LOGIN</a>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}